{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "MCP_TOOL_TIMEOUT": "1000000",
    "BASH_DEFAULT_TIMEOUT_MS": "7200000",
    "BASH_MAX_TIMEOUT_MS": "7200000"
  },
  "permissions": {
    "allow": [
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(touch:*)",
      "Bash(rm:*)",
      "Bash(sed:*)",
      "Bash(find:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(rg:*)",
      "WebFetch(domain:github.com)",
      "Bash(cat:*)",
      "Bash(gemini:*)",
      "mcp__serena__check_onboarding_performed",
      "mcp__serena__onboarding",
      "mcp__serena__list_dir",
      "mcp__serena__find_file",
      "mcp__serena__write_memory",
      "Bash(./tools/unity-test.sh:*)",
      "mcp__serena__search_for_pattern",
      "mcp__serena__find_symbol",
      "mcp__serena__get_symbols_overview",
      "mcp__serena__replace_symbol_body",
      "Bash(dotnet build)",
      "mcp__serena__insert_after_symbol",
      "mcp__serena__find_referencing_symbols",
      "mcp__serena__think_about_collected_information",
      "SlashCommand(/kiro:spec-requirements:*)",
      "SlashCommand(/kiro:spec-impl:*)",
      "Bash(git worktree:*)",
      "Bash(./tools/unity-list-tests.sh:*)",
      "Bash(./check_timeout_tests.sh:*)",
      "Bash(tee:*)",
      "mcp__serena__initial_instructions",
      "mcp__serena__read_memory",
      "SlashCommand(/kiro:spec-tasks:*)",
      "mcp__serena__list_memories",
      "Bash(git branch:*)",
      "Bash(git add:*)",
      "mcp__kiri__context_bundle",
      "mcp__kiri__files_search",
      "mcp__kiri__snippets_get",
      "Bash(dotnet build:*)",
      "Skill(skill-creator)",
      "Skill(edit-schema)",
      "Bash(gh release view:*)",
      "mcp__serena__activate_project",
      "mcp__serena__think_about_task_adherence",
      "mcp__serena__think_about_whether_you_are_done",
      "Bash(git commit:*)"
    ],
    "deny": []
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "serena"
  ],
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Hero.aiff"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "node ./.claude/statusline.js"
  },
  "enabledPlugins": {}
}
