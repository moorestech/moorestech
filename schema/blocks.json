{
  "$id": "blocks",
  "type": "object",
  "required": [ "data" ],
  "isDefaultOpen": true,
  
  "properties": {

    "data": {
      "type": "array",
      "overrideCodeGeneratePropertyName": "BlockElement",

      "items": {
        "type": "object",
        "required": ["blockGuid", "name", "blockType", "itemId", "size", "blockParam", "modelTransform"],

        "properties": {
          "blockGuid": {
            "type": "string",
            "format": "uuid",
            "autoGenerated": true
          },

          "name": {
            "type": "string"
          },
          "blockType": {
            "type": "string",
            "enum": [
              "Block","BeltConveyor","Chest",
              "ElectricMachine","ElectricPole","ElectricGenerator","ElectricMiner",

              "Gear","Shaft","GearMachine","SimpleGearGenerator","GearBeltConveyor",
              "ItemShooter"]
          },

          "itemGuid": {
            "type": "string",
            "format": "uuid",
            "foreignKey": "items:itemGuid:name"
          },
          "blockSize": {
            "type": "array",
            "pattern": "@vector3Int",
            "items": {
              "type": "integer"
            },
            "default": [1,1,1]
          },

          "blockParam": {
            "oneOf": [
              {
                "if": {
                  "properties": {
                    "blockType": {
                      "const": "BeltConveyor"
                    }
                  }
                },
                "then": {
                  "type": "object",
                  "required": ["beltConveyorItemCount", "timeOfItemEnterToExit", "inventoryConnectors"],

                  "properties": {
                    "beltConveyorItemCount": {"type": "integer", "default": 1},
                    "timeOfItemEnterToExit": {"type": "number", "default": 1},
                    "inventoryConnectors": {
                      "$ref": "inventoryConnects"
                    }
                  }
                }
              },
              {
                "if": {
                  "properties": {
                    "blockType": {
                      "const": "Chest"
                    }
                  }
                },
                "then": {
                  "type": "object",
                  "required": ["chestItemSlotCount", "inventoryConnectors"],

                  "properties": {
                    "chestItemSlotCount": {"type": "integer", "default": 5},
                    "inventoryConnectors": {
                      "$ref": "inventoryConnects"
                    }
                  }
                }
              },
              {
                "if": {
                  "properties": {
                    "blockType": {
                      "const": "ElectricMachine"
                    }
                  }
                },
                "then": {
                  "type": "object",
                  "required": ["inputItemSlotCount", "outputItemSlotCount", "requiredPower", "inventoryConnectors"],

                  "properties": {
                    "inputItemSlotCount": {"type": "integer", "default": 1},
                    "outputItemSlotCount": {"type": "integer", "default": 1},
                    "requiredPower": {"type": "number", "default": 5},
                    "inventoryConnectors": {
                      "$ref": "inventoryConnects"
                    }
                  }
                }
              },
              {
                "if": {
                  "properties": {
                    "blockType": {
                      "const": "ElectricPole"
                    }
                  }
                },
                "then": {
                  "type": "object",
                  "required": ["poleConnectionRange", "machineConnectionRange"],

                  "properties": {
                    "poleConnectionRange": {"type": "integer", "default": 5},
                    "machineConnectionRange": {"type": "integer", "default": 5}
                  }
                }
              },
              {
                "if": {
                  "properties": {
                    "blockType": {
                      "const": "ElectricGenerator"
                    }
                  }
                },
                "then": {
                  "type": "object",
                  "required": ["fuelItemSlotCount", "isInfinityPower", "infinityPower", "fuelItems", "inventoryConnectors"],

                  "properties": {
                    "fuelItemSlotCount": {"type": "integer", "default": 3},

                    "isInfinityPower": {"type": "boolean", "default": false},
                    "infinityPower": {"type": "integer", "default": 0},

                    "fuelItems": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "required": [ "itemId", "time", "power" ],

                        "properties": {
                          "itemId": {
                            "type": "string",
                            "format": "uuid",
                            "foreignKey": "items:itemId:name"
                          },

                          "time": {
                            "type": "number",
                            "default": 1
                          },
                          "power": {
                            "type": "number",
                            "default": 10
                          }
                        }
                      }
                    },
                    "inventoryConnectors": {
                      "$ref": "inventoryConnects"
                    }
                  }
                }
              },
              {
                "if": {
                  "properties": {
                    "blockType": {
                      "const": "ElectricMiner"
                    }
                  }
                },
                "then": {
                  "type": "object",
                  "required": ["requiredPower","outputItemSlotCount","mineSettings","inventoryConnectors"],

                  "properties": {
                    "requiredPower": {"type": "number", "default": 5},
                    "outputItemSlotCount": {"type": "integer", "default": 3},
                    "mineSettings": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "required": [ "itemId", "time" ],

                        "properties": {
                          "itemId": {
                            "type": "string",
                            "format": "uuid",
                            "foreignKey": "items:itemId:name"
                          },

                          "time": {
                            "type": "number",
                            "default": 1
                          }
                        }
                      }
                    },
                    "inventoryConnectors": {
                      "$ref": "inventoryConnects"
                    }
                  }
                }
              },
              {
                "if": {
                  "properties": {
                    "blockType": {
                      "const": "Gear"
                    }
                  }
                },
                "then": {
                  "type": "object",
                  "required": ["teethCount", "requireTorque", "gearConnects"],

                  "properties": {
                    "teethCount": {"type": "integer", "default": 10},
                    "requireTorque": {"type": "number", "default": 1},
                    "gearConnects": {
                      "$ref": "blockConnectInfo"
                    }
                  }
                }
              },
              {
                "if": {
                  "properties": {
                    "blockType": {
                      "const": "Shaft"
                    }
                  }
                },
                "then": {
                  "type": "object",
                  "required": ["requireTorque", "gearConnects"],

                  "properties": {
                    "requireTorque": {"type": "number", "default": 1},
                    "gearConnects": {
                      "$ref": "blockConnectInfo"
                    }
                  }
                }
              },
              {
                "if": {
                  "properties": {
                    "blockType": {
                      "const": "GearMachine"
                    }
                  }
                },
                "then": {
                  "type": "object",
                  "required": ["inputItemSlotCount", "outputItemSlotCount", "teethCount","requireTorque","requiredRpm", "inventoryConnectors", "gearConnects"],

                  "properties": {
                    "inputItemSlotCount": {"type": "integer", "default": 1},
                    "outputItemSlotCount": {"type": "integer", "default": 1},
                    "teethCount": {"type": "integer", "default": 10},
                    "requireTorque": {"type": "number", "default": 1},
                    "requiredRpm": {"type": "number", "default": 5},
                    "inventoryConnectors": {
                      "$ref": "inventoryConnects"
                    },
                    "gearConnects": {
                      "$ref": "blockConnectInfo"
                    }
                  }
                }
              },
              {
                "if": {
                  "properties": {
                    "blockType": {
                      "const": "SimpleGearGenerator"
                    }
                  }
                },
                "then": {
                  "type": "object",
                  "required": ["teethCount","generateRpm","generateTorque", "gearConnects"],

                  "properties": {
                    "teethCount": {"type": "integer", "default": 10},
                    "generateRpm": {"type": "number", "default": 5},
                    "generateTorque": {"type": "number", "default": 1},
                    "gearConnects": {
                      "$ref": "blockConnectInfo"
                    }
                  }
                }
              },
              {
                "if": {
                  "properties": {
                    "blockType": {
                      "const": "GearBeltConveyor"
                    }
                  }
                },
                "then": {
                  "type": "object",
                  "required": ["beltConveyorItemCount", "beltConveyorSpeed", "requiredTorque", "inventoryConnectors", "gearConnects"],

                  "properties": {
                    "beltConveyorItemCount": {"type": "integer", "default": 4},
                    "beltConveyorSpeed": {"type": "number", "default": 2},
                    "requiredTorque": {"type": "number", "default": 2},

                    "inventoryConnectors": {
                      "$ref": "inventoryConnects"
                    },
                    "gearConnects": {
                      "$ref": "blockConnectInfo"
                    }
                  }
                }
              },
              {
                "if": {
                  "properties": {
                    "blockType": {
                      "const": "ItemShooter"
                    }
                  }
                },
                "then": {
                  "type": "object",
                  "required": ["inventoryItemNum", "initialShootSpeed", "itemShootSpeed", "acceleration", "inventoryConnectors"],

                  "properties": {
                    "inventoryItemNum": {"type": "integer", "default": 4},
                    "initialShootSpeed": {"type": "number", "default": 3},
                    "itemShootSpeed": {"type": "number", "default": 2},
                    "acceleration": {"type": "number", "default": 1},
                    "inventoryConnectors": {
                      "$ref": "inventoryConnects"
                    }
                  }
                }
              }
            ]
          },

          "overrideVerticalBlock": {

            "type": "object",
            "properties": {

              "upBlockGuid" : {
                "type": "string",
                "format": "uuid",
                "foreignKey": "blocks:blockGuid:name"
              },
              "horizontalBlockGuid" : {
                "type": "string",
                "format": "uuid",
                "foreignKey": "blocks:blockGuid:name"
              },
              "downBlockGuid" : {
                "type": "string",
                "format": "uuid",
                "foreignKey": "blocks:blockGuid:name"
              }

            }

          },

          "modelTransform": {
            "$ref": "modelTransform"
          }
        }
      }
    }
  }
}