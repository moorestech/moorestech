{
  "$id": "items",
  "type": "object",
  "required": [ "data" ],
  "isDefaultOpen": true,

  "properties": {
    "data": {
      "type": "array",
      "overrideCodeGeneratePropertyName": "ItemElement",
      
      "items": {
        "type": "object",
        "required": [ "itemGuid", "itemStack" ],
        "thumbnail": "imagePath",

        "properties": {
          "itemGuid": {
            "type": "string",
            "format": "uuid",
            "autoGenerated": true
          },

          "imagePath": {
            "type": "string",
            "pattern": "@imagePath",
            "thumbnail": true
          },

          "name": {
            "type": "string"
          },

          "maxStack": {
            "type": "integer",
            "default" : 100
          }
        }
      }
    }
  }
}
