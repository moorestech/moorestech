{
  "$id": "mapObjects",
  "type": "object",
  "isDefaultOpen": true,
  
  "properties": {
    "data": {
      "type": "array",
      "overrideCodeGeneratePropertyName": "MapObjectElement",
      
      "required": ["type", "hp", "earnItemHps", "earnItems", "miningTools"],
      "items": {
        "type": "object",
        "properties": {

          "mapObjectGuid": {
            "type": "string",
            "format": "uuid",
            "autoGenerated": true
          },

          "mapObjectName": {
            "type": "string",
            "default": "mapObjectName"
          },

          "hp": {
            "type": "integer",
            "default": 100
          },
          "earnItemHps": {
            "type": "array",
            "items": {
              "type": "integer"
            },
            "default": [0]
          },
          "earnItems": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["itemId", "itemName", "minCount", "maxCount"],
              "properties": {
                "itemId": {
                  "type": "string",
                  "format": "uuid",
                  "foreignKey": "items:itemId:name"
                },
                "minCount": {
                  "type": "integer",
                  "default": 1
                },
                "maxCount": {
                  "type": "integer",
                  "default": 3
                }
              }
            }
          },
          "miningTools": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["toolItemModId", "toolItemName", "damage", "attackSpeed"],
              "properties": {
                "toolItemModId": {
                  "type": "string",
                  "format": "uuid",
                  "foreignKey": "items:itemId:name"
                },
                "damage": {
                  "type": "integer",
                    "default": 10
                },
                "attackSpeed": {
                  "type": "number",
                    "default": 1
                }
              }
            }
          }
        }
      }
    }
  }
}
