{
  "$id": "modelTransform",
  "type": "object",
  "required": [
    "position",
    "rotation",
    "scale"
  ],
  "properties": {
    "position": {
      "type": "array",
      "pattern": "@vector3",
      "items": {
        "type": "number"
      },
      "default": [0, 0, 0]
    },
    "rotation": {
      "type": "array",
      "pattern": "@vector3",
      "items": {
        "type": "number"
      },
      "default": [0, 0, 0]
    },
    "scale": {
      "type": "array",
      "pattern": "@vector3",
      "items": {
        "type": "number"
      },
      "default": [1, 1, 1]
    }
  }
}
