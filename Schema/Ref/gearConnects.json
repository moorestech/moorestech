{
  "$id": "gearConnects",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["offset", "directions", "option"],
    "properties": {
      "offset": {
        "type": "array",
        "pattern": "@vector3Int",
        "items": {
          "type": "integer"
        },
        "default": [0, 0, 0]
      },
      "directions": {
        "type": "array",
        "items": {
          "type": "array",
          "pattern": "@vector3Int",
          "items": {
            "type": "integer"
          }
        },
        "default": [0, 0, 0]
      },
      "gearConnectOption": {
        "type": "object",
        "required": ["isReverse", "onlySpecifiedTypes"],
        "properties": {
          "isReverse": {
            "type": "boolean",
            "default": false
          },
          "onlySpecifiedTypes": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}
